{
  "name": "Visual Wikipedia",
  "description": "Turns all links in Wikipedia into clickable preview images",
  "version": "1.0",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    { "matches" : ["http://*.wikipedia.org/wiki/*"],
      "js": ["jquery-1.9.1.js", 
            "myscript.js"]
    }
  ],
  "browser_action": {
    "default_title": "Visual Wikipedia",
    "default_popup": "popup.html",
    "default_icon": "wikipedia-favicon.png"
  },
  "manifest_version": 2,

  "permissions": ["*.wikipedia.org/wiki/*",
                  "*.wiktionary.org/*",
                  "http://commons.wikimedia.org"]
}
